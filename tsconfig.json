{
  "compilerOptions": {
    "types": ["node"],
    "target": "es5",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@consts": ["src/shared/consts"],
      "@services": ["src/shared/services"],
      "@services/*": ["src/shared/services/*"],
      "@types": ["src/shared/types"],
      "@testingUtils": ["src/shared/testingUtils"],
      "@views": ["src/views"],
      "@views/*": ["src/views/*"],
      "@shared": ["src/shared"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["./src/**/*", "src", "setupTests.ts", "tailwind.config.js"],
  "exclude": ["node_modules"]
}
